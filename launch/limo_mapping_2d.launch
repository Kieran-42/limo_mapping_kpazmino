<launch>
  <!-- Use simulated clock if Gazebo is running -->
  <param name="use_sim_time" value="true"/>

  <!-- slam_toolbox in synchronous mode (stable for mapping while you teleop) -->
  <node pkg="slam_toolbox" type="sync_slam_toolbox_node" name="slam_toolbox" output="screen">
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    <param name="base_frame" value="base_link"/>
    <param name="scan_topic" value="/limo/scan"/>
    <param name="publish_map" value="true"/>
    <remap from="scan" to="/limo/scan"/>
  </node>

  <!-- Optional: RViz with map and TF (comment out if using the Python viewer below) -->
  <!--
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find your_pkg)/rviz/limo_mapping.rviz"/>
  -->
</launch>
